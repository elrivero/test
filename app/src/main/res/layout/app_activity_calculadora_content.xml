<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCalculadora"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="165dp">

    <!-- KEYBOARD -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingTop="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/siete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="7"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/ocho"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="8"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/nueve"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="9"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/cuatro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="4"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/cinco"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="5"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/seis"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="6"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/uno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="1"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/dos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="2"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/tres"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_state_calculadora"
                    android:text="3"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/fbDelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_state_calculadora"
                    android:src="@drawable/ic_backspace_black_24dp"
                    android:scaleType="fitCenter"
                    android:padding="20dp"
                    android:clickable="true"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/cero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_state_calculadora"
                    android:text="0"
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_state_calculadora"
                    android:text=""
                    android:textSize="50sp"
                    android:clickable="false"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>